<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <View
        android:id="@+id/container_cpu"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/text_view_cpu"
        android:layout_marginTop="15dp"
        android:text=" Cpu temperature:"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity=""
        android:layout_width="310dp"
        android:background="@drawable/edt_layout"
        android:layout_height="30dp"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_cpu_svgrepo_com"

        app:layout_constraintStart_toStartOf="@id/container_cpu"
        app:layout_constraintEnd_toEndOf="@id/container_cpu"
        app:layout_constraintTop_toTopOf="@id/container_cpu"/>

    <TextView
        android:id="@+id/text_view_cpu2"
        android:layout_marginTop="15dp"
        android:text=" Baterry temperature:"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity=""
        android:layout_width="310dp"
        android:background="@drawable/edt_layout"
        android:layout_height="30dp"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_battery_svgrepo_com"

        app:layout_constraintStart_toStartOf="@id/container_cpu"
        app:layout_constraintEnd_toEndOf="@id/container_cpu"
        app:layout_constraintTop_toBottomOf="@id/text_view_cpu"/>

    <TextView
        android:id="@+id/text_view_cpu3"
        android:layout_marginTop="15dp"
        android:text=" Gpu temperature:"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity=""
        android:layout_width="310dp"
        android:background="@drawable/edt_layout"
        android:layout_height="30dp"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_cpu_svgrepo_com"

        app:layout_constraintStart_toStartOf="@id/container_cpu"
        app:layout_constraintEnd_toEndOf="@id/container_cpu"
        app:layout_constraintTop_toBottomOf="@id/text_view_cpu2"/>

    <TextView
        android:id="@+id/text_view_cpu4"
        android:layout_marginTop="15dp"
        android:text="  Ambient temperature:"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity=""
        android:layout_width="310dp"
        android:background="@drawable/edt_layout"
        android:layout_height="30dp"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_thermometer_svgrepo_com"

        app:layout_constraintStart_toStartOf="@id/container_cpu"
        app:layout_constraintEnd_toEndOf="@id/container_cpu"
        app:layout_constraintTop_toBottomOf="@id/text_view_cpu3"/>
